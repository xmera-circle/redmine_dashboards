- max_entries = settings[:max_entries].presence || DashboardContent::DEFAULT_MAX_ENTRIES

.box.tabular.settings
  p
    = dashboards_settings_textfield :title,
                                     label: l(:field_title),
                                     value: dashboard_feed_title(settings[:title], block_object),
                                     tag_name: "settings[#{block_id}][title]"
  p
    = dashboards_settings_urlfield :url,
                                    value: settings[:url],
                                    label: l(:field_url),
                                    tag_name: "settings[#{block_id}][url]",
                                    required: true
  p
    = dashboards_settings_numberfield :max_entries,
                                        value: max_entries,
                                        tag_name: "settings[#{block_id}][max_entries]",
                                        min: 1, max: 100, required: true
