$('#errorExplanation').remove();

<% @block_ids.each do |block_id| %>
  $('#content').prepend('<%= escape_javascript(error_messages_for(@dashboard)) %>');
  $("#block-<%= block_id %>").replaceWith("<%= escape_javascript render_dashboard_block(block_id.to_s, @dashboard) %>");
<% end %>

reloadOnCurrentPosition();

document.addEventListener("DOMContentLoaded", function(event) { 
            var scrollpos = localStorage.getItem('scrollpos');
            if (scrollpos) window.scrollTo(0, scrollpos);
        });
        
function reloadOnCurrentPosition() {
  localStorage.setItem('scrollpos', window.scrollY);
  location.reload(); 
}

$('[title]').tooltip({
    show: {
      delay: 400
    },
    position: {
      my: "center bottom-5",
      at: "center top"
    }
});
